<%- include('../partials/navbar.ejs')%>
<%- include('../partials/sidebar_right.ejs')%>
<% if(type == "Admin"){%>
<%- include('../partials/admin_sidebar.ejs')%>
<%}else if(type == "Member"){ %>
<%- include('../partials/member_sidebar.ejs')%>
<% } %>




<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Add Car</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Add Car</li>
                            </ol>
                        </nav>
                    </div>

                </div>
            </div>




            <% if(typeof alerts != 'undefined'){ %>
            <% alerts.forEach(function (error) {%>


            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= error.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% }) %>
            <% } %>


            <div class="pd-20 card-box mb-30">

                <div class="clearfix">
                    <h4 class="text-blue h4">Add Car Info </h4>

                </div>

                <div>
                    <form method="POST" enctype="multipart/form-data">

                        <div class="form-group">
                            <label>created by</label>
                            <input class="form-control" type="text" name="created_by" value="<%= uname %>" readonly>
                        </div>
                        <% 
                        var today = new Date();
var date = today.getFullYear()+'-'+(today.getMonth()+1)+'-'+today.getDate();
var time = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
var dateTime = date+' '+time; 
%>
                        <div class="form-group">
                            <label>Date</label>
                            <input class="form-control" type="text" placeholder="" id="date" name="date"
                                value="<%= dateTime %>" readonly>
                            <div class="form-group">
                                <label>Title</label>
                                <input class="form-control" type="text" name="title">
                            </div>


                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" type="text" name="description"></textarea>
                            </div>



                            <div class="form-group">
                                <label>Image</label>
                                <input type="file" class="form-control-file form-control height-auto" name="image">

                            </div>
                            <div class="col-md-12 col-sm-12 mb-30">

                                <div class="pd-20 card-box height-100-p">
                                    <div class="btn-list" style="float: right;">
                                        <!-- <button type="button" class="btn btn-outline-dark">Reset</button> -->
                                        <button type="submit" class="btn btn-outline-success">Submit</button>


                                    </div>
                                </div>
                            </div>
                    </form>

                </div>

            </div>



        </div>
    </div>
</div>